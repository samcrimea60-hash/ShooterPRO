<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- ЛОГОТИП ПРИЛОЖЕНИЯ - ИСПОЛЬЗУЕМ ImageView из mipmap -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp">

        <!-- ЛОГОТИП из mipmap -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <!-- НАЗВАНИЕ ПРИЛОЖЕНИЯ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShooterPRO"
            android:textColor="@color/primary_mint"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- ПОДЗАГОЛОВОК -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Профессиональные тренировки стрелка"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Карточка с выбором стрелка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_card"
        android:padding="16dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите спортсмена"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/shooterSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_mint" />
    </LinearLayout>

    <!-- Карточка для создания нового стрелка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_card"
        android:padding="16dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Или добавьте нового"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/newShooterEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя нового спортсмена"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:backgroundTint="@color/primary_mint"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Кнопка входа -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Начать тренировки →"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:backgroundTint="@color/primary_lavender"/>

    <!-- Заполнитель для центрирования -->
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
